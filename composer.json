{
    "name": "anteris-dev/data-transfer-object-factory",
    "description": "Gives an easy-to-use API for mocking Data Transfer Objects created with the Spatie package.",
    "autoload": {
        "psr-4": {
            "Anteris\\DataTransferObjectFactory\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anteris\\Tests\\DataTransferObjectFactory\\": "./tests"
        }
    },
    "require": {
        "anteris-dev/faker-map": "^1.1",
        "fakerphp/faker": "^1.0",
        "php": "^7.4 | ^8.0",
        "phpdocumentor/reflection-docblock": "^5.0",
        "spatie/data-transfer-object": "^2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Aidan Casey",
            "email": "aidan.casey@anteris.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "spatie/ray": "^1.14",
        "vimeo/psalm": "^4.4",
        "nesbot/carbon": "^2.43"
    },
    "scripts": {
        "fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "./vendor/bin/phpunit"
    }
}
